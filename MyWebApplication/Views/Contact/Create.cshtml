@model MyWebApplication.Models.Contact

@{
    ViewBag.Title = "Contact Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3 style="text-align:center;">Contact Detail</h3>
</div>
<div ng-controller="ContactController">
    <form name="CreateForm" ng-submit="ContactRecord(Contact)" novalidate>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="Name" ng-model="Contact.Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" id="Phone" ng-model="Contact.Phone" placeholder="Age">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" id="Email" ng-model="Contact.Email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" id="Address" ng-model="Contact.Address" placeholder="Address">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" > Save </button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>